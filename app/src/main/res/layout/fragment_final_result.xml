<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 최종 선택한 직업의 이름 텍스트 -->
    <TextView
        android:id="@+id/textView_finalJobName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최종 선택한 직업"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 최종 선택한 직업의 설명 텍스트 -->
    <TextView
        android:id="@+id/textView_finalJobDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="최종 선택한 직업의 설명"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView_finalJobName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView_finalSubjects"
        app:layout_constraintVertical_weight="1" />

    <!-- 필요한 핵심 과목 텍스트 -->
    <TextView
        android:id="@+id/textView_finalSubjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="핵심 과목: ..."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textView_finalJobDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
